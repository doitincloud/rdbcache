<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.doitincloud.rdbcache</groupId>
  <artifactId>rdbcache-parent</artifactId>
  <!-- ><version>2.0.2.SNAPSHOT</version> -->
  <version>1.5.13.RELEASE</version>
  <name>rdbcache</name>
  <description>edis database cache asynchronous api parent project</description>
  <url>http://rdbcache.com/</url>
  <packaging>pom</packaging>

  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <developers>
    <developer>
      <name>Sam Wen</name>
      <email>com.doitincloud@gmail.com</email>
      <organization>doiticloud</organization>
      <organizationUrl>http://doiticloud.com</organizationUrl>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git@github.com:rdbcache/rdbcache.git</connection>
    <developerConnection>scm:git:ssh://github.com:rdbcache/rdbcache.git</developerConnection>
    <url>https://github.com/rdbcache/rdbcache</url>
  </scm>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <!-- <version>2.0.2.RELEASE</version> -->
    <version>1.5.13.RELEASE</version>
    <relativePath/> <!-- lookup parent from repository -->
  </parent>

  <properties>

    <java.version>1.8</java.version>
    <boot.version>${parent.version}</boot.version>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

  </properties>

  <modules>
      <module>rdbcache-core</module>
      <module>rdbcache-without-oauth2</module>
      <module>rdbcache-server</module>
  </modules>

  <build>
    <plugins>

      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>${java.version}</source>
            <target>${java.version}</target>
            <compilerArgument>-parameters</compilerArgument>
          </configuration>
      </plugin>

    </plugins>
  </build>
</project>
